<?xml version="1.0" encoding="utf-8"?>
<project>
    <set name="builds_folder" value="."/>
    <set name="builds_folder" value="/AndroidBuilds" if="android"/>

    <meta title="your thoughts. lose them all" package="com.shoo.jam2022" version="1.0.0" company="pecheny"/>
    <app main="j2022.Main" path="${builds_folder}/Export" file="j2022"/>

    <window antialiasing="4"/>
    <window background="#303030" fps="60" width="640" height="960" unless="html5"/>
    <window background="#303030" fps="60"  if="html5"/>
    <source path="src"/>

    <haxelib name="openfl"/>

    <haxelib name="hxcpp-debugger"/>
    <haxedef name = "openfl_disable_context_cache" value = "true" />
    <haxedef name = "openfl_always_render" value = "true" />

    <haxedef name = "HXCPP_DEBUGGER"  />
    <library path="Assets/j2022.swf" preload="true" generate="true"  />
    <assets path="Assets" include="*"/>

</project>